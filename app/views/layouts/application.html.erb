<!DOCTYPE html>
<html>
  <head>
    <title>CapstoneTestApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% flash.each do |name, message| %>
        <p> <%= message %> </p>
      <% end %> 

      <%= yield %>
    </div>
  </body>
</html>
