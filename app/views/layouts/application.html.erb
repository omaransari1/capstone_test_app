                  <% end %>
                <%end%>
                </ul>
            </div>
        </div>
        <!-- Top Header End -->
        
      <nav>            
            <div class="container">
                <div id="navbar" class="navbar navbar-default">
                    <div class="navbar-header col-md-2 col-sm-4 col-xs-4">
                        <a class="navbar-brand trigger" href="/" title="LearnMate"><img alt="Logo" src="/images/quikkstudylogo.png"></a>
                    </div>
