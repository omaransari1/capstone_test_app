<body id="home" class="cms_index2">
  
  <!-- Header Start -->
    <header>
        <!-- Top Header Start -->
        <div class="header_top">
            <div class="container">
                <div class="top_info">
                    <span><% if current_user %>
                              Welcome, <%= current_user.first_name %>!
